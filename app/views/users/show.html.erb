<% content_for :head do %>
	<% if @dish.present? %>
		<%= tag :meta, property: "fb:app_id", content: ENV["FACEBOOK_APP_ID"] %>
		<%= tag :meta, property: "og:site_name", content: "chefapp" %>
		<%= tag :meta, property: "og:type", content: "mattchefapp:dish" %>
		<%= tag :meta, property: "og:title", content: @dish.name %>
	    <%= tag :meta, property: "og:url", content: user_url(@user) + "?" + CGI::escape(@dish.name) %>
	    <%#= tag :meta, property: "og:image", content: image_path(@asset.photo) %>
	<% end %>
<% end %>

<%= image_tag @user.avatar.url(:medium) %><br>
Chef <%= @user.name %><br>
City: <%= @user.city %><br>
Style: <%= @user.style %><br>
Signature Dish: <%= @user.signature_dish %><br>

<% if current_user?(@user) %>
	<%= link_to "Complete Your Profile", profile_user_path(@user) %><br>
<% end %> 

<% if !@user.dishes.blank? %><br>
	MENU
	<% if current_user?(@user) %><br>
		<%= link_to "Add a dish", new_dish_path %>
	<% end %>

	<%= render 'users/dishes' %>

<% else %><br>
	<%= @user.name %> hasn't cooked any dishes yet.
	<% if current_user?(@user) %><br>
		<%= link_to "Add a dish", new_dish_path %>
	<% end %>
<% end %>