<% @dishes.each do |dish| %><br>
	<%= dish.name %>
		
	<% if current_user?(@user) %>
		<%= link_to "Edit", edit_dish_path(dish) %>
		<%= link_to "Delete", dish, method: :delete, data: {confirm: "You sure? All Associated Photos Will Also Be Deleted" } %>
	<% end %><br>

	<%= dish.description %><br>

	<% if dish.for_sale? %>
		This Dish is for Sale! <%= mail_to @user.email, "Email", subject: "Message from ChefApp: "+ dish.name, body: "Ask " + @user.name + " about pricing, delivery, and other important details about this dish...", target: "_blank" %><br>
	<% end %>

	<% dish.assets.each do |asset| %>
		<%= link_to image_tag(asset.photo.url(:thumb)), asset.photo.url(:large), :target => "_blank" %>
		<% if current_user?(@user) %>
			<%= link_to "X", asset, method: :delete, data: {confirm: "Do you know what you're doing?" } %>
		<% end %>
	<% end %><br>
<% end %>